@model Product

    <div class="container>
        <div class="row>
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Slider - Create</h4>
                        <form method="post" enctype="multipart/form-data" class="forms-sample">
                            <div class="form-group">
                                <label asp-for="@Model.Name">Name</label>
                                <input asp-for="@Model.Name" class="form-control" id="productName" placeholder="Name">
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Description">Description</label>
                                <input asp-for="@Model.Description" class="form-control" id="productDescription" placeholder="Description">
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.CostPrice">Cost Price</label>
                                <input asp-for="@Model.CostPrice" class="form-control" id="productCostPrice" placeholder="Cost Price">
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.SellPrice">Sell Price</label>
                                <input asp-for="@Model.SellPrice" class="form-control" id="productSellPrice" placeholder="Sell Price">
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.InfoText">Info Text</label>
                                <input asp-for="@Model.InfoText" class="form-control" id="productInfoText" placeholder="Info Text">
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.IsNew">Is New</label>
                                <input asp-for="@Model.IsNew" class="form-control" id="productIsNew" placeholder="Is New">
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.IsFeatured">Is Featured</label>
                                <input asp-for="@Model.IsFeatured" class="form-control" id="productIsFeatured" placeholder="Is Featured">
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Discount">Discount</label>
                                <input asp-for="@Model.Discount" class="form-control" id="productDiscount" placeholder="Discount">
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Author.Fullname">Author Full name</label>
                                <input asp-for="@Model.Author.Fullname" class="form-control" id="productAuthorFullname" placeholder="Author Full Name">
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Category.Name">Category Name</label>
                                <input asp-for="@Model.Category.Name" class="form-control" id="productCategoryName" placeholder="Category Name">
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.ImageFile"></label>
                                <input asp-for="@Model.ImageFile" type="file" class="form-control" placeholder="ImageFile">
                            </div>
                            <button type="submit" class="btn btn-primary mr-2">Submit</button>
                            <a asp-area="admin" asp-controller="product" asp-action="index" class="btn btn-light">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>