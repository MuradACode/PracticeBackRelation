@model Product

    <div class="container>
        <div class="row>
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Product - Update</h4>
                        <form method="post" asp-route-id="@Model.Id" class="forms-sample">
                            <div class="form-group">
                                <label for="productName">Title1</label>
                                <input value="@Model.Name" name="productName" type="text" class="form-control" id="productName" placeholder="Name">
                            </div>
                            <div class="form-group">
                                <label for="productDescription">Description</label>
                                <input value="@Model.Description" name="productDescription" type="text" class="form-control" id="productDescription" placeholder="Description">
                            </div>
                            <div class="form-group">
                                <label for="productCostPrice">Cost Price</label>
                                <input value="@Model.CostPrice" name="productCostPrice" type="text" class="form-control" id="productCostPrice" placeholder="Cost Price">
                            </div>
                            <div class="form-group">
                                <label for="productSellPrice">Cost Price</label>
                                <input value="@Model.SellPrice" name="productSellPrice" type="text" class="form-control" id="productSellPrice" placeholder="Sell Price">
                            </div>
                            <div class="form-group">
                                <label for="productInfoText">Info Text</label>
                                <input value="@Model.InfoText" name="productInfoText" type="text" class="form-control" id="productInfoText" placeholder="Info Text">
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.IsNew">is New</label>
                                <input value="@Model.IsNew" class="form-control" id="productIsNew">
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.IsFeatured">is Featured</label>
                                <input value="@Model.IsFeatured" class="form-control" id="IsFeatured>
                            </div>
                            <div class="form-group">
                                <label for="productDiscount">Discount</label>
                                <input value="@Model.Discount" name="productDiscount" type="text" class="form-control" id="productDiscount" placeholder="Discount">
                            </div>
                            <div class="form-group">
                                <label for="productAuthorFullname">Author Full Name</label>
                                <input value="@Model.Author.Fullname" name="productAuthorFullname" type="text" class="form-control" id="productAuthorFullname" placeholder="Author Full Name">
                            </div>
                            <div class="form-group">
                                <label for="productCategoryName">Category Name</label>
                                <input value="@Model.Category.Name" name="productCategoryName" type="text" class="form-control" id="productCategoryNames" placeholder="Category Name">
                            </div>
                            <button type="submit" class="btn btn-primary mr-2">Submit</button>
                            <a asp-area="admin" asp-controller="product" asp-action="details" asp-route-id="@Model.Id" class="btn btn-light">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>