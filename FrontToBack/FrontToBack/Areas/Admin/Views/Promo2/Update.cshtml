@model Promo2

<div class="container>
    <div class="row>
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Promo 2 - Update</h4>
                    <form method="post" asp-route-id="@Model.Id" class="forms-sample">
                        <div class="form-group">
                            <label for="promo2Title1">Title1</label>
                            <input value="@Model.Title1" name="promo2Title1" type="text" class="form-control" id="promo2Title1" placeholder="Title1">
                        </div>
                        <div class="form-group">
                            <label for="promo2Title2">Title2</label>
                            <input value="@Model.Title2" name="promo2Title2" type="text" class="form-control" id="promo2Title2" placeholder="Title2">
                        </div>
                        <div class="form-group">
                            <label for="promo2RedirectedUrl">Description</label>
                            <input value="@Model.RedirectedUrl" name="promo2RedirectedUrl" type="text" class="form-control" id="promo2RedirectedUrl" placeholder="Redirected Url">
                        </div>
                        <div class="form-group">
                            <label for="promo2ButtonText">Redirected Url</label>
                            <input value="@Model.ButtonText" name="promo2ButtonText" type="text" class="form-control" id="promo2ButtonText" placeholder="Button Text">
                        </div>
                        <div class="form-group">
                            <label for="promo2ButtonUrl">Redirected Url Text</label>
                            <input value="@Model.ButtonUrl" name="promo2ButtonUrl" type="text" class="form-control" id="promo2ButtonUrl" placeholder="Button Url">
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                        <a asp-area="admin" asp-controller="promo2" asp-action="details" asp-route-id="@Model.Id" class="btn btn-light">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>