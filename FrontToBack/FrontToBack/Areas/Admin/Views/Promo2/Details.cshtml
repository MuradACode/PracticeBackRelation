@model Promo2

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <a class="btn btn-primary mb-4" asp-area="admin" asp-controller="promo2" asp-action="index">Go Back</a>
                    </div>
                    <h4 class="card-title">Slides</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Title1
                                    </th>
                                    <th>
                                        Title2
                                    </th>
                                    <th>
                                        Redirected Url
                                    </th>
                                    <th>
                                        Button Text
                                    </th>
                                    <th>
                                        Button Url
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        @Model.Title1
                                    </td>
                                    <td>
                                        @Model.Title2
                                    </td>
                                    <td>
                                        @Model.RedirectedUrl
                                    </td>
                                    <td>
                                        @Model.ButtonText
                                    </td>
                                    <td>
                                        @Model.ButtonUrl
                                    </td>
                                    <td>
                                        <a asp-area="admin" asp-controller="promo2" asp-action="update" asp-route-id="@Model.Id" class="btn btn-warning mb-3">Update</a>
                                        <a asp-area="admin" asp-controller="promo" asp-action="delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>