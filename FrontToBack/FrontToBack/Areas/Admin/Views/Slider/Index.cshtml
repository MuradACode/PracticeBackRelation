@model List<Slider>

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-4">
                        <a class="btn btn-primary" asp-area="admin" asp-controller="dashboard" asp-action="index">Go Back</a>
                        <a class="btn btn-success" asp-area="admin" asp-controller="slider" asp-action="create">Create</a>
                    </div> 
                    <h4 class="card-title">Slides</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <tbody>
                                @foreach (Slider slider in Model)
                                {
                                    <tr>
                                        <td>
                                            @slider.Title1
                                        </td>
                                        <td>
                                            <a asp-area="admin" asp-controller="slider" asp-action="details" asp-route-id="@slider.Id" class="btn btn-primary">Details</a>
                                            <a asp-area="admin" asp-controller="slider" asp-action="update" asp-route-id="@slider.Id" class="btn btn-warning">Update</a>
                                            <a asp-area="admin" asp-controller="slider" asp-action="delete" asp-route-id="@slider.Id" class="btn btn-danger">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>