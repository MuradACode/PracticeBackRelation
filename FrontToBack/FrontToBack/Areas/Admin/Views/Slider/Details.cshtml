@model Slider

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <a class="btn btn-primary mb-4" asp-area="admin" asp-controller="slider" asp-action="index">Go Back</a>
                    </div>
                    <h4 class="card-title">Slides</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <tbody>
                                    <tr>
                                        <td>
                                            @Model.Title1
                                        </td>
                                        <td>
                                            <a asp-area="admin" asp-controller="slider" asp-action="update" asp-route-id="@Model.Id" class="btn btn-warning">Update</a>
                                            <a asp-area="admin" asp-controller="slider" asp-action="delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                                        </td>
                                    </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>