@model Feature

<div class="container>
    <div class="row>
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Feature - Create</h4>
                    <form method="post" class="forms-sample">
                        <div class="form-group">
                            <label asp-for="@Model.IconUrl">Icon Url</label>
                            <input asp-for="@Model.IconUrl" class="form-control" placeholder="Icon Url">
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Title">Title</label>
                            <textarea asp-for="@Model.Title" class="form-control" id="CkEdit" placeholder="Title"></textarea>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Desc">Description</label>
                            <input asp-for="@Model.Desc" class="form-control" id="featureDesc" placeholder="Description">
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                        <a asp-area="admin" asp-controller="slider" asp-action="index" class="btn btn-light">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section CKEditor
 {
    <script src="https://cdn.ckeditor.com/ckeditor5/34.1.0/classic/ckeditor.js"></script>
    <script src="~/Areas/Admin/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.getElementById("CkEdit"))
    </script>
 }